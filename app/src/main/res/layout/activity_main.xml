<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#000" />

        <!-- Sex Input (isMale) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sex" />

        <EditText
            android:id="@+id/editTextSex"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="gender"
            android:hint="@string/hint_sex"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />

        <!-- Race Input (isBlack) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_race" />

        <EditText
            android:id="@+id/editTextRace"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="none"
            android:hint="@string/hint_race"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />

        <!-- Smoker Input (isSmoker) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_is_smoker" />

        <EditText
            android:id="@+id/editTextSmoker"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="none"
            android:hint="@string/hint_is_smoker"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />

        <!-- Diabetic Input (isDiabetic) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_is_diabetic" />

        <EditText
            android:id="@+id/editTextDiabetic"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="isDiabetic"
            android:hint="@string/hint_is_diabetic"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />

        <!-- Hypertensive Input (isHypertensive) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_is_hypertensive" />

        <EditText
            android:id="@+id/editTextHypertensive"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="none"
            android:hint="@string/hint_is_hypertensive"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />

        <!-- Age Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_age" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="age"
            android:hint="@string/hint_age"
            android:inputType="number"
            android:maxWidth="488dp"
            tools:ignore="TextContrastCheck" />

        <!-- Systolic Pressure Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_systolic_pressure" />

        <EditText
            android:id="@+id/editTextSystolicPressure"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="none"
            android:hint="@string/hint_systolic_pressure"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />

        <!-- Total Cholesterol Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_total_cholesterol" />

        <EditText
            android:id="@+id/editTextCholesterol"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="none"
            android:hint="@string/hint_total_cholesterol"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />

        <!-- HDL Cholesterol Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_hdl_cholesterol" />

        <EditText
            android:id="@+id/editTextHDLCholesterol"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:autofillHints="none"
            android:hint="@string/hint_hdl_cholesterol"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />

        <!-- Predict Button -->
        <Button
            android:id="@+id/buttonPredict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_predict"
            android:layout_gravity="center"
            android:backgroundTint="#3F51B5"
            android:textColor="#fff" />

        <!-- Risk Text -->
        <TextView
            android:id="@+id/textViewRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_risk"
            android:textStyle="bold"
            android:paddingTop="16dp" />

    </LinearLayout>
</ScrollView>

